<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <kopfc.privatelessons.view.InstructorView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#ccc"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        app:exampleColor="#33b5e5"
        app:exampleDimension="24sp"
        app:exampleDrawable="@android:drawable/ic_menu_add"
        app:exampleString="Hello, InstructorView">


        <TextView
            android:id="@+id/display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="name here"/>
            />

        <TextView
            android:id="@+id/display_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/display_name"
            android:layout_below="@+id/display_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="bio here"/>

        <ImageView
            android:id="@+id/display_image"
                android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:contentDescription="instructor image"/>


        </kopfc.privatelessons.view.InstructorView>

</LinearLayout>
